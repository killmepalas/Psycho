<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassTestActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtNameTestPass"
        android:textAlignment="center"
        android:text="Название теста"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameTestPass"
        android:textAlignment="center"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="150sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linPass">

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/txtNumQuestionPass"
            android:layout_centerHorizontal="true"
            android:text="1"/>

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:layout_centerHorizontal="true"
            android:text="/"/>

        <TextView
            android:layout_marginTop="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/txtKQPass"
            android:layout_centerHorizontal="true"
            android:text="k"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/txtNameQuestionPass"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linPass"
        android:text="Текст вопроса"/>

    <RadioGroup
        android:layout_below="@+id/txtNameQuestionPass"
        android:id="@+id/rgAnswersPass"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rgAnswersPass"
        android:id="@+id/btnNext"
        />
</RelativeLayout>