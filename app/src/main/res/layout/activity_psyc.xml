<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".PsycActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerPsyc"
        android:text="Статистика психолога"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="50sp"
        />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/accountInformation"
        android:background="@drawable/rounded"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:id="@+id/linlay"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="#696969"
            android:text="Количество заявок: "/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tRequestsPsyc"
            android:textColor="#696969"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linlay"
        android:layout_width="wrap_content"
        android:textColor="#696969"
        android:id="@+id/linlay2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:text="Количество пациентов: "/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tPatiensPsyc"
            android:textColor="#696969"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:text="0"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика по тестам"
        android:id="@+id/tStaticsPsyc"
        android:textColor="#00008B"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linlay2"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>


</RelativeLayout>